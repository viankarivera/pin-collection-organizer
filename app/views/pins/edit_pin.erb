<form action="/pins/edit_pin" method="POST">
<input type="hidden" id="hidden" name="method" value="PATCH">
    <h4>Edit Pin:</h4><br>
    
    <label>Name:</label>
        <input type="text" name="name" value="<%=@pin.name%>"><br>
    <label>Artist:</label>
        <input type="text" name="artist" value="<%=@pin.artist%>"><br>
    <label>Series:</label>
        <input type="text" name="series" value="<%=@pin.series%>"><br>
    <label>Price:</label>
        <input type="number" name="price" value="<%=@pin.price%>"><br>
    <input type="submit" value="Finish Edit">
</form>